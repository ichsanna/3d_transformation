<Window x:Class="_3D_Transformation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:h="http://helix-toolkit.org/wpf"
        xmlns:local="clr-namespace:_3D_Transformation"
        mc:Ignorable="d"
        Title="3D Transformation" Width="1280" Height="720" >

    <Grid VerticalAlignment="Top">
        <Grid VerticalAlignment="Top" Height="490">
            <h:HelixViewport3D x:Name="viewport" ShowCoordinateSystem="True">
                <h:SunLight/>
                <h:Teapot Position="2 2 2"/>
                <ModelVisual3D x:Name="placedobjects" Content="{Binding Model}"/>
                <h:GridLinesVisual3D Width="128" Length="128" MinorDistance="1" MajorDistance="1" Thickness="0.01"/>
                <h:EllipsoidVisual3D RadiusX="1" RadiusY="2" RadiusZ="3" Center="5 5 5"/>
            </h:HelixViewport3D>
        </Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="0,500,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TabControl VerticalAlignment="Top" Background="#FFACACAC" Height="183" Margin="0,0,-383,0">
                <TabItem Header="Add Object">
                    <Grid Background="White" Margin="0,0,-0.2,0.4">
                        <ComboBox x:Name="comboboxnewshape" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="174" Margin="88,0,0,118.4"/>
                        <TextBox x:Name="textboxposisiawalx"  HorizontalAlignment="Left" Height="22" Margin="112,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
                        <Label Content="Objek:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <Label Content="Posisi:" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textboxposisiawaly" HorizontalAlignment="Left" Height="22" Margin="172,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
                        <TextBox x:Name="textboxposisiawalz" HorizontalAlignment="Left" Height="22" Margin="232,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
                        <Label Content="X:" HorizontalAlignment="Left" Margin="88,52,0,0" VerticalAlignment="Top"/>
                        <Label Content="Y:" HorizontalAlignment="Left" Margin="148,52,0,0" VerticalAlignment="Top"/>
                        <Label Content="Z:" HorizontalAlignment="Left" Margin="208,52,0,0" VerticalAlignment="Top"/>
                        <Button x:Name="buttonbuatobjek" Content="Buat Objek" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button x:Name="buttonresetobjek" Content="Reset" HorizontalAlignment="Left" Margin="105,93,0,0" VerticalAlignment="Top" Width="75"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Translate">
                    <Grid Background="White"/>
                </TabItem>
                <TabItem Header="Scale">
                    <Grid Background="White"/>
                </TabItem>
                <TabItem Header="Rotate">
                    <Grid Background="White"/>
                </TabItem>
                <TabItem Header="Shear">
                    <Grid Background="White"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
